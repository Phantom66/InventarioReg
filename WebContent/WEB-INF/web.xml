<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
	<error-page>
		<exception-type>java.lang.RuntimeException</exception-type>
		<location>/Error.jsp</location>
	</error-page>
	<servlet>
		<servlet-name>ControladorMain</servlet-name>
		<servlet-class>com.inventario.con.ControladorMain</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControladorMain</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ControladorLogin</servlet-name>
		<servlet-class>com.inventario.con.ControladorLogin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControladorLogin</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
	<!-- Seguridad através de contenedores -->
	<security-constraint>
		<display-name>Recursos protegidos para el usuario admin</display-name>
		<web-resource-collection>
			<web-resource-name>Area protegida</web-resource-name>
			<url-pattern>/principal/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<display-name>Recurso protegido para el usuario user</display-name>
		<web-resource-collection>
			<web-resource-name>Area protegida</web-resource-name>
			<url-pattern>/principal/Editar.do</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>user</role-name>
		</auth-constraint>
	</security-constraint>

	<!-- Tipo de Autenticación FORM -->
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/error.jsp</form-error-page>
		</form-login-config>
	</login-config>
</web-app>