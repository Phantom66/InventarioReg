<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.inventario.bo">
	<class name="Perfil" table="perfiles">
		<id name="id" type="int">
			<generator class="increment" />
		</id>
		<property name="email" type="string" column="email" />
		<property name="name" type="string" column="name" />
		<property name="password" type="string" column="password" />

		<!--  Relación M a 1 (Producto a Persona)-->
		<many-to-one name="persona" class="Persona">
			<column name="id_persona" not-null="true" />
		</many-to-one>
		
		<!--  Relación 1 a M (Perfiles a Roles)-->
	<list name="roles" table="roles" cascade="all" inverse="true">
		<key>
			<column name="id_roles" not-null="true" />
		</key>
		<list-index column="orden" />
		<one-to-many class="Roles" />

	</list>
		
	</class>
</hibernate-mapping>