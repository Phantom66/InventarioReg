<?xml version="1.0"?>
<hibernate-mapping
	package="com.inventario.bo">
	<class name="Producto" table="producto">
		<id name="id" type="int" />
		<property name="nombre" type="string" column="nombre" />
		<property name="estatus" type="string" column="estatus" />
		<property name="descripcion" type="string"
			column="descripcion" />
		<many-to-one name="persona" class="Persona">
			<column name="id_persona" />
		</many-to-one>
	</class>
</hibernate-mapping>