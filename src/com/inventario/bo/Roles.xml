<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.inventario.bo">
	<class name="Roles" table="roles" >
		<id name="id" type="int" column="id">
			<generator class="increment"/>
		</id>
		<property name="nombre" type="string" column="name"/>
		<property name="nPerfil" type="stirng" column="perfil"/>
		
		<!--  RelaciÃ³n M a 1 (Perfil a Persona)-->
		<many-to-one name="perfil" class="Perfil">
			<column name="id_perfiles" not-null="true"/>
		</many-to-one>
	</class>

</hibernate-mapping>
                                   
                                   